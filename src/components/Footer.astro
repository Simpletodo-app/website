---
import { Instagram, Twitter, Github } from "lucide-astro";

const year = new Date().getFullYear();
---

<footer class="max-w-6xl text-sm mx-auto px-4 py-4 sm:px-6 lg:px-8">
  <div class="flex justify-between">
    <!-- App Name and Year -->
    <p class="mb-4">
      &copy; <span>{year}</span> Simpletodo.app
    </p>

    <!-- Social Media Links -->
    <div class="flex justify-center items-center space-x-4 gap-1">
      <a href="/privacy" class="hover:text-blue-600">Privacy</a>
      <a href="/terms" class="hover:text-blue-600">Terms</a>
      <a
        href="https://github.com/simpletodo-app"
        class="hover:text-blue-400"
        target="_blank"
      >
        <Github />
      </a>
      <a
        href="https://twitter.com/simpletodo_app"
        class="hover:text-blue-400"
        target="_blank"
      >
        <Twitter />
      </a>
      <a
        href="https://instagram.com/simpletodoapp"
        class="hover:text-pink-400"
        target="_blank"
      >
        <Instagram />
      </a>
    </div>
  </div>
</footer>
