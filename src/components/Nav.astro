---
import { macDownloadLink } from "../common/utils";
import LinkButton from "./LinkButton.astro";
---

<nav class="bg-white shadow-md sticky top-0 z-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center gap-2">
        <img src="/logo.png" class="h-8 w-8" />
        <a href="/" class="text-xl font-medium"> Simpletodo.app </a>
      </div>

      <div class="flex items-center">
        <!-- Navigation Links -->
        <div class="hidden md:block">
          <div class="flex items-baseline space-x-4">
            <a
              href="/#why"
              class="text-gray-800 hover:text-blue-700 px-3 py-2 rounded-md text-sm font-medium"
            >
              Why Simpletodo?
            </a>
            <a
              href="/#features"
              class="text-gray-800 hover:text-blue-700 px-3 py-2 rounded-md text-sm font-medium"
            >
              Features
            </a>
            <a
              href="/#pricing"
              class="text-gray-800 hover:text-blue-700 px-3 py-2 rounded-md text-sm font-medium"
            >
              Pricing
            </a>
            <a
              href="/#faq"
              class="text-gray-800 hover:text-blue-700 px-3 py-2 rounded-md text-sm font-medium"
            >
              FAQs
            </a>
          </div>
        </div>

        <!-- Try It Button -->
        <div class="ml-4 flex-shrink-0">
          <LinkButton href={macDownloadLink}> Download </LinkButton>
        </div>
      </div>
    </div>
  </div>
</nav>
