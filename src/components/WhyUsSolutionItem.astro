---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<span class="mr-3 text-white p-3.5 rounded-full bg-blue-800">
  <slot name="icon" />
</span>
<div class="flex flex-col gap-2">
  <span class="font-normal text-lg text-black">{title}</span>
  <span class="text-gray-600 text-base">{description}</span>
</div>
